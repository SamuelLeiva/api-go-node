{
  "name": "integration-tests",
  "private": true,
  "scripts": {
    "test:integration:up": "docker compose -f docker-compose.integration.yml up -d --build",
    "test:integration:run": "jest tests/integration --runInBand",
    "test:integration:down": "docker compose -f docker-compose.integration.yml down",
    "test:integration": "npm run test:integration:up && sleep 5 && npm run test:integration:run && npm run test:integration:down"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "axios": "^1.6.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "ts-node": "^10.9.2"
  }
}
